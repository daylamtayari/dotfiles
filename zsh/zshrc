# vim:fileencoding=utf-8:foldmethod=marker

#: ZSH Initialisation {{{

eval "$(starship init zsh)"

#: }}}

#: Zinit Imports (with Turbo) {{{

zinit wait lucid blockf for \
    atinit"zicompinit; zicdreplay" \  	# Fast compinit startup
    atload"_zsh_autosuggest_start" \  	# Start zsh-autosuggestions immediately
    zsh-users/zsh-autosuggestions \	# Autosuggestions 
    zdharma/fast-syntax-highlighting \	# Syntax highlighting

#: }}}

#: Shell Variables {{{

export EDITOR=nvim
export PATH=$HOME/.local/bin:$PATH

#: }}}

#: Aliases {{{

#: Suffix Aliases {{{

