alias lr='exa --recurse --icons'
alias lg='exa -lg --git --icons'
alias lga='exa -lga --git --icons'
alias tree='exa --tree --icons'
alias md='mkdir -p'
alias rd='rmdir'
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'
alias -g .......='../../../../../..'
alias -g ........='../../../../../../..'

#: }}}

