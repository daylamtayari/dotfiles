{
    "packageManagers": [
        "apt",
        "dnf",
        "pacman",
        "yum",
        "zypper",
        "emerge",
        "slackpkg"
    ],
    "installKey": {
        "pacman":   "-S",
        "emerge":   "-u",
        "default":  "install"
    },
    "updates": {
        "updateCheck": {
            "dnf":      "check-update",
            "pacman":   "-Sy",
            "yum":      "check-update",
            "zyppper":  "list-updates",
            "emerge":   "--sync",
            "default":  "update"
        },
        "upgrade": {
            "pacman":   "-Su",
            "yum":      "update",
            "zyppper":  "update",
            "emerge":   "--update --deep --with-bdeps=y @world",
            "slackpkg": "upgrade-all",
            "default":  "upgrade"
        }
    },
    "packages": {
        "zsh": {
            "emerge":   "app-shells/zsh",
            "default":  "zsh"
        },
        "kitty": {
            "emerge":   "z11-terms/kitty",
            "slackpkg": "",
            "default":  "kitty"
        },
        "imagemagick": {
            "dnf":      "ImageMagick",
            "yum":      "ImageMagick",
            "zyppper":  "ImageMagick",
            "emerge":   "media-gfx/imagemagick",
            "default":  "imagemagick"
        },
        "neovim": {
            "emerge":   "app-editors/neovim",
            "slackpkg": "",
            "default":  "neovim"
        },
        "ranger": {
            "emerge":   "app-misc/ranger",
            "slackpkg": "",
            "default":  "ranger"
        },
        "firefox": {
            "apt":      "firefox-esr",
            "zyppper":  "MozillaFirefox",
            "emerge":   "wwww-client/firefox",
            "slackpkg": "mozilla-firefox",
            "default":  "firefox"
        },
        "okular": {
            "emerge":   "kde-apps/okular",
            "default":  "okular"
        },
        "jq": {
            "emerge":   "app-misc/jq",
            "slackpkg": "",
            "default":  "jq"
        },
        "exa": {
            "emerge":   "sys-apps/exa",
            "slackpkg": "",
            "default":  "exa"
        },
        "lua": {
            "emerge":   "dev-lang/lua",
            "default":  "lua"
        },
        "fzf": {
            "emerge":   "app-shells/fzf",
            "slackpkg": "",
            "default":  "fzf"
        },
        "tokei": {
            "apt":      "",
            "emerge":   "",
            "yum":      "",
            "slackpkg": "",
            "default":  "tokei"
        },
        "aria2": {
            "default":  "aria2"
        }
    }
}
